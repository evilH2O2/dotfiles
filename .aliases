#!/bin/bash
# FROM:
# https://github.com/mathiasbynens/dotfiles/blob/master/.aliases

alias ..="cd .."
alias cdc="cd ~/Documents"
alias cdl="cd ~/Downloads"
alias cdt="cd ~/Desktop"
alias cpi="cd ~/Pictures"


# Detect which `ls` flavor is in use
if ls --color > /dev/null 2>&1; then # GNU `ls`
	colorflag="--color"
	export LS_COLORS='no=00:fi=00:di=01;31:ln=01;36:pi=40;33:so=01;35:do=01;35:bd=40;33;01:cd=40;33;01:or=40;31;01:ex=01;32:*.tar=01;31:*.tgz=01;31:*.arj=01;31:*.taz=01;31:*.lzh=01;31:*.zip=01;31:*.z=01;31:*.Z=01;31:*.gz=01;31:*.bz2=01;31:*.deb=01;31:*.rpm=01;31:*.jar=01;31:*.jpg=01;35:*.jpeg=01;35:*.gif=01;35:*.bmp=01;35:*.pbm=01;35:*.pgm=01;35:*.ppm=01;35:*.tga=01;35:*.xbm=01;35:*.xpm=01;35:*.tif=01;35:*.tiff=01;35:*.png=01;35:*.mov=01;35:*.mpg=01;35:*.mpeg=01;35:*.avi=01;35:*.fli=01;35:*.gl=01;35:*.dl=01;35:*.xcf=01;35:*.xwd=01;35:*.ogg=01;35:*.mp3=01;35:*.wav=01;35:'
else # macOS `ls`
	colorflag="-G"
	export LSCOLORS='gxfxhxdxcxhxhxhxhxcxcx'
fi


# List all files colorized in long format
alias l="ls -lF ${colorflag}"

# List all files colorized in long format, excluding . and ..
alias la="ls -lAF ${colorflag}"

# List only directories
alias lsd="ls -lF ${colorflag} | grep --color=never '^d'"

# Always use color output for `ls`
alias ls="command ls ${colorflag}"

alias ll="ls -l ${colorflag}"


# network/proxy
alias shell_proxy="export ALL_PROXY=$1"
alias shellproxy-1080="export ALL_PROXY='socks5://127.0.0.1:1080'"
alias unsetproxy="unset ALL_PROXY && unset http_proxy && unset https_proxy"
alias myip="curl ip.cip.cc; echo"


# 实用
alias rm="sleep 1;rm -i"
alias mk="mkdir -pv"
alias cls='clear'
alias grep='grep --color=auto'
# avoid escape sequence attacks
# alias cat="cat -v"
# Print each PATH entry on a separate line
alias path='echo -e ${PATH//:/\\n}'
alias git-log-branch="git log --oneline --decorate --graph --all"
alias sha256sum="openssl dgst -sha256 $1"
alias rename="mv $1 $2"
alias tar_ebz2="tar jxvf $1"
alias tar_egz="tar -zxf $1"

# docker
alias docker_start_attach="docker start $1 && docker attach $1"


# Pentest
# From: https://blog.ropnop.com/docker-for-pentesters/#usefuldockeraliases
alias dockershell="docker run --rm -i -t --entrypoint=/bin/bash"
alias dockershellsh="docker run --rm -i -t --entrypoint=/bin/sh"
